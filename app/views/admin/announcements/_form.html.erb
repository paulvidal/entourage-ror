<%= form_for [:admin, @announcement], html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :icon, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :icon, Announcement.icons, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :action, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :action, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div>
        <%= f.url_field :url, class: "form-control" %>
      </div>
      <div>
        <%= f.label :webview, class: "control-label" %>
        <%= f.check_box :webview %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="radio">
        <label>
          <%= f.radio_button :status, :inactive %>
          <span class="label label-default">inactive</span>
        </label>
      </div>
      <div class="radio">
        <label>
          <%= f.radio_button :status, :test %>
          <span class="label label-warning">en test</span>
        </label>
      </div>
      <div class="radio">
        <label>
          <%= f.radio_button :status, :active %>
          <span class="label label-success">active</span>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :human_position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :human_position %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit "Enregistrer", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
